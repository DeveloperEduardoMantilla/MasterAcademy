use("MasterAcademy")
db.createCollection('role', {
    validator: {
        $jsonSchema: {
            bsonType: 'object',
            required: ["id", "name"],
            properties: {
                id: {
                    bsonType: "number",
                    description: "The id must be of integer type"
                },
                name: {
